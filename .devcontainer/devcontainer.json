{
  "name": "MicroPython Pico Build Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "badlogicgames.serial-plotter",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "esbenp.prettier-vscode",
        "GitHub.codespaces",
        "mathematic.vscode-pdf",
        "McCarter.start-git-bash",
        "mechatroner.rainbow-csv",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-python.pylint",
        "ms-python.python",
        "ms-python.vscode-python-envs",
        "ms-vscode.vscode-serial-monitor",
        "narasimapandiyan.jetbrainsmono",
        "oderwat.indent-rainbow",
        "paulober.pico-w-go",
        "pietrocz.close-all-serial-ports",
        "raspberry-pi.raspberry-pi-pico",
        "streetsidesoftware.code-spell-checker",
        "tal7aouy.icons",
        "saeris.markdown-github-alerts"
      ]
    }
  },
  "postCreateCommand": "cd /micropython/ports/rp2 && make submodules && chmod +x /workspaces/AIDriver_MicroPython_Challanges/.devcontainer/*.sh"
}